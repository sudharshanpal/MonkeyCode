{
  "manifest_version": 3,
  "name": "Google Drive QR Code Generator",
  "version": "1.0",
  "description": "Generate QR codes directly in Google Drive sharing interface",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://drive.google.com/*"],
      "js": ["qrcode.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://drive.google.com/drivesharing/driveshare*"],
      "js": ["qrcode.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["qrcode.min.js"],
      "matches": ["https://drive.google.com/*"]
    }
  ]
}
